{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "template": "{{ .Name }}",
          "foreground": "#007acc",
          "type": "shell",
          "style": "plain"
        },
        {
          "template": " <#757575,>as</> root",
          "foreground": "#ff8080",
          "type": "root",
          "style": "plain"
        },
        {
          "properties": {
            "time_format": "15:04:05"
          },
          "template": " <#757575,>|</> {{ .CurrentDate | date .Format }}",
          "foreground": "#689f38",
          "type": "time",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "┌ {{ .UserName }}@{{ .HostName }} ",
          "foreground": "#757575",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "style": "agnoster_full"
          },
          "template": " {{ .Path }} ",
          "foreground": "#100e23",
          "powerline_symbol": "",
          "background": "#91ddff",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "branch_ahead_icon": "↑",
            "branch_behind_icon": "↓",
            "branch_gone": "≢",
            "branch_icon": " ",
            "branch_identical_icon": "≡",
            "cherry_pick_icon": "✓ ",
            "commit_icon": "▷ ",
            "fetch_status": true,
            "merge_icon": "◴ ",
            "no_commits_icon": "[no commits]",
            "rebase_icon": "Ɫ ",
            "tag_icon": "▶ "
          },
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} │{{ end }}{{ if .Staging.Changed }} {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} {{ .StashCount }}{{ end }} ",
          "foreground": "#100e23",
          "powerline_symbol": "",
          "background": "#95ffa4",
          "type": "git",
          "style": "powerline",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
            "{{ if gt .Behind 0 }}#c5b6ad{{ end }}"
          ]
        },
        {
          "template": " {{ .WorkspaceName }} ",
          "foreground": "#100e23",
          "powerline_symbol": "",
          "background": "#ffee58",
          "type": "terraform",
          "style": "powerline"
        },
        {
          "template": " error ",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "background": "#ff8080",
          "type": "status",
          "style": "powerline"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "└ ",
          "foreground": "#757575",
          "type": "text",
          "style": "plain"
        },
        {
          "template": "$",
          "foreground": "#ffffff",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "$ "
  },
  "version": 3,
  "final_space": true
}
