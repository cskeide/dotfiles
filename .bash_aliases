#
# ~/.bash_aliases
#

# ls aliases
alias la='ls -A'
alias ll='ls -lAh'

# use vim not vi
alias vi='vim'

# reboot / halt / poweroff
alias reboot='sudo /sbin/reboot'
alias poweroff='sudo /sbin/poweroff'
alias halt='sudo /sbin/halt'
alias shutdown='sudo /sbin/shutdown'

# misc
alias df='df -H'
alias du='du -ch'
alias free='free -h'
alias diff='colordiff'

# mv and rm
alias mv='mv -i'
alias rm='rm -i'

# fix aliases when using sudo
alias sudo='sudo '
